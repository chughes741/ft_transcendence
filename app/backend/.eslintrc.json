{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parserOptions": {
    "project": ["tsconfig.json"],
    "sourceType": "module"
  },
  "rules": {
    // Prevents using objects before they're defined
    "no-use-before-define": ["error", { "variables": true }],
    // == and != not allowed, only === and !==
    "eqeqeq": ["error", "always"]
  }
}
